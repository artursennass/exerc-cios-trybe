// Exercício 1
// Crie uma classe Car cujo objeto representará um carro.

class Car {
    brand: string;
    color: string;
    doors: number;

    contructor (brand: string, color: string, doors: number) {
        this.brand = brand;
        this.color = color;
        this.doors = doors;
    }

    honk (): string {
        return 'Honk!'
    }

    turnOn (): string {
        return 'Carro ligado'
    }

    turnOff (): string {
        return 'Carro desligado'
    }
    
    speedUp (): string {
        return 'Carro acelerando'
    }

    speedDown (): string {
        return 'Carro desacelerando'
    }

    stop (): string {
        return 'Carro para'
    }

    turn (direction: string): string {
        return `Carro vrira para ${direction}`
    }
}

module.exports = Car;